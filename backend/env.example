# ========================================
# CONFIGURACIÓN OBLIGATORIA DEL SISTEMA
# ========================================

# Server Configuration
PORT=3001                                    # Puerto del servidor (OBLIGATORIO)
NODE_ENV=development                         # Entorno: development/production (OBLIGATORIO)

# ========================================
# BASE DE DATOS - POSTGRESQL (OBLIGATORIO)
# ========================================
DB_HOST=localhost                            # Host de PostgreSQL (OBLIGATORIO)
DB_PORT=5432                                # Puerto de PostgreSQL (OBLIGATORIO)
DB_NAME=streaming_system                    # Nombre de la base de datos (OBLIGATORIO)
DB_USER=postgres                            # Usuario de PostgreSQL (OBLIGATORIO)
DB_PASSWORD=TU_CONTRASEÑA_AQUI             # Contraseña de PostgreSQL (OBLIGATORIO)

# ========================================
# AUTENTICACIÓN JWT (OBLIGATORIO)
# ========================================
JWT_SECRET=GENERA_UNA_CLAVE_SECRETA_FUERTE # Clave secreta para JWT (OBLIGATORIO)
JWT_EXPIRES_IN=7d                          # Expiración del token (OBLIGATORIO)

# ========================================
# CONFIGURACIÓN DE ARCHIVOS (OBLIGATORIO)
# ========================================
UPLOAD_PATH=./uploads                       # Carpeta para uploads (OBLIGATORIO)
MAX_FILE_SIZE=10485760                     # Tamaño máximo de archivo (10MB)

# ========================================
# WHATSAPP - VENOM BOT (OBLIGATORIO)
# ========================================
WHATSAPP_SESSION_PATH=./whatsapp-sessions  # Carpeta para sesiones de WhatsApp

# ========================================
# OCR - TESSERACT (OBLIGATORIO)
# ========================================
TESSERACT_LANG=spa+eng                     # Idiomas para OCR (español + inglés)
OCR_CONFIDENCE_THRESHOLD=0.6               # Umbral de confianza OCR (0.0 - 1.0)
OCR_MAX_RETRIES=3                          # Máximo de reintentos OCR
OCR_TIMEOUT=30000                          # Timeout OCR en milisegundos
AMOUNT_TOLERANCE=0.01                      # Tolerancia para montos (en dólares)

# ========================================
# RATE LIMITING (OBLIGATORIO)
# ========================================
RATE_LIMIT_WINDOW_MS=900000                # Ventana de rate limiting (15 minutos)
RATE_LIMIT_MAX_REQUESTS=100                # Máximo de requests por ventana

# ========================================
# SEGURIDAD (OBLIGATORIO)
# ========================================
BCRYPT_ROUNDS=12                           # Rondas de encriptación de contraseñas
CORS_ORIGIN=http://localhost:3000          # Origen permitido para CORS

# ========================================
# LOGGING (OPCIONAL)
# ========================================
LOG_LEVEL=info                              # Nivel de logging

# ========================================
# LÓGICA DE NEGOCIO (OPCIONAL)
# ========================================
VIP_ORDERS_THRESHOLD=10                    # Umbral de órdenes para ser VIP
VIP_SPENDING_THRESHOLD=1000                # Umbral de gasto para ser VIP
RENEWAL_REMINDER_DAYS=3                    # Días antes del vencimiento para recordatorio
PROFILE_EXPIRATION_CHECK_INTERVAL=3600000  # Intervalo de verificación de perfiles (1 hora)
